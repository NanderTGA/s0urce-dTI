root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = false
trim_trailing_whitespace = true
quote_type = double

[*.md]
insert_final_newline = true
indent_size = 2

[{ package.json, pnpm-lock.yaml }]
indent_size = 2
end_of_line = lf
insert_final_newline = true

[pnpm-lock.yaml]
quote_type = single