{
    "compilerOptions": {
        "target"           : "ESNext",
        "module"           : "NodeNext",
        "moduleResolution" : "NodeNext",
        "resolveJsonModule": true,
        "strict"           : true,
        "rootDir"          : "./src",
        "outDir"           : "./dist",
        "declaration"      : true,
        "declarationDir"   : "./dist",
        "declarationMap"   : true,
